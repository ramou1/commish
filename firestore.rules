rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para fluxos do usuário
    match /users/{userId}/fluxos/{fluxoId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para fluxos pendentes do usuário
    match /users/{userId}/fluxos_pendentes/{fluxoId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para propostas de empresas (futuro)
    match /empresas/{empresaId}/propostas/{propostaId} {
      allow read, write: if request.auth != null && request.auth.uid == empresaId;
    }
    
    // Bloquear acesso a outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
